<h1>The list of Tasks</h1>
<%= link_to 'Create new Task', new_task_path   %>
<ul>
  <% @tasks.each do |task| %>
    <li> <%= link_to task.title, task_path(task) %> <%= link_to "edit", edit_task_path(task)  %> <%= link_to "delete", destroy_path(task), method: :delete, data: { confirm: "Are you sure?" }  %></li>
  <% end %>
</ul>
